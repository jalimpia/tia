<div class="cbp-row wh-sensei-single-course-header">
	<div class="cbp-container">
		<div class="wh-sensei-title-wrap wh-padding">
      <h3>Create Course</h3>
      <form action="/course/add-course" method="POST" enctype="multipart/form-data">

        <div class="row">
          <div class="col-4">
            <label>Course Code</label>
            <input class="input-group" type="text" name="course_code" class="input" value="" placeholder="Course Code" required>
          </div>
          <div class="col-4">
            <label>Course Name</label>
            <input class="input-group" type="text" name="course_name" class="input" value="" placeholder="Course Name" required>
          </div>
          <div class="col-4">
            <label>Semester</label>
            <select style="background:#f2f2f2;border:none;" class="form-control input-group" name="course_sem" required>
              <option value="1">First Semester</option>
              <option value="2">Second Semester</option>
              <option value="3">Summer</option>
            </select>
          </div>
        </div>

        <div class="row">
          <div class="col-12">
            <label>Course Description</label>
            <textarea name="course_desc" rows="8" required></textarea>
          </div>
        </div>

        <div class="row">
          <div class="col-6">
            <label>Course Units</label>
            <input class="input-group" type="text" name="course_units" class="input" value="" placeholder="Course Units" required>
          </div>
          <div class="col-6">
            <label>Course Image</label>
            <input class="input-group" type="file" name="course_img" class="input" value="" placeholder="Course Image" accept="image/*" name="photo" required>
          </div>
        </div>

        <div class="row">
          <div class="col-12">
            <input type="submit" class="button pull-right" value="Submit">
          </div>
        </div>
      </form>
    </div>
	</div>
</div>

