<div class="cbp-row">
  <div class="cbp-container">
    <div class="one whole wh-padding">
      <nav role="navigation" aria-label="Breadcrumbs" class="breadcrumb-trail breadcrumbs" itemprop="breadcrumb">
      </nav>
    </div>
  </div>
</div>
<div class="cbp-row wh-sensei-single-course-header">
	<div class="cbp-container">
		<div class="wh-sensei-title-wrap wh-padding">
      <div class="quiz-container" id="quiz">

          <div id="question">
          <div id="timer" class="pull-right"></div>
          <h3 style="font-family:'Raleway';font-weight:800;color:#333333;"><%=exam_info.exam_title%></h3>
          <h5 style="font-family:'Raleway';font-weight:400;font-size:16px;"><b>Instruction:</b> <%=exam_info.exam_instruction%></h5>

          <%i=1%>
          <% exam_questions.forEach(function(question, index){ %>
            <div class="row">
              <div class="col-12">
                <h2><%=i%>.) <%=question.question_desc%></h2>
                <input class="answer radiobtn" id="choices-0-<%=i%>" type="radio" name="choices_set_<%=i%>" value="A">
                <label for="choices-0-<%=i%>" ><span style="margin-left:25px;"><%=question.question_pa_1%></span></label>
                <input class="answer radiobtn" id="choices-1-<%=i%>" type="radio" name="choices_set_<%=i%>" value="B">
                <label for="choices-1-<%=i%>"><span style="margin-left:25px;"><%=question.question_pa_2%></span></label>
                <input class="answer radiobtn" id="choices-2-<%=i%>" type="radio" name="choices_set_<%=i%>" value="C">
                <label for="choices-2-<%=i%>"><span style="margin-left:25px;"><%=question.question_pa_3%></span></label>
                <input class="answer radiobtn" id="choices-3-<%=i%>" type="radio" name="choices_set_<%=i%>" value="D">
                <label for="choices-3-<%=i%>"><span style="margin-left:25px;"><%=question.question_pa_4%></span></label>
              </div>
            </div>
              <%i++%>
          <%})%>
          <div class="row">
            <div class="col-12">
              <button id="exam_submit_btn" disabled class="pure-button pure-button-primary pull-right" id="submit-button" onclick="submit_test()">Submit Exam</button>
            </div>
          </div>
          </div>
      </div>
    </div>
	</div>
</div>


<script src="/javascripts/jquery.min.js"></script>
<script src="/javascripts/jquery.countdown.min.js"></script>
<script type="text/javascript">
  /*Timer*/
  var param = <%=exam_info.exam_time%>;
  var today = new Date();
  var newDate = today.setHours(today.getHours() + param);
  //For minutes
  //var newDate = today.setMinutes(today.getMinutes() + param);
  $('#timer').countdown(newDate, function(event) {
    $(this).html(event.strftime('%H:%M:%S'));
    if(event.strftime('%H:%M:%S')=='00:00:00'){
      alert('Time is up!');
    }
  });
  /*End-Timer*/


  $( document ).ready(function() {
    $(".answer:radio").click(function(event){
       if($('.answer:radio').filter(':checked').length == <%=exam_questions.length%>){
         $('#exam_submit_btn').prop("disabled", false); // Element(s) are now enabled.
       }
    });
  });

function submit_test(){
  /*Get all answers*/
  var answers = [];
  $('.answer:radio').filter(':checked').each(function () {
    answers.push($(this).val());
  });
  console.log(answers);
  alert('This is just a preview!');
}


</script>
