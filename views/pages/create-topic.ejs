<link href="/stylesheets/bootstrap-toggle.min.css" rel="stylesheet">
<style>
  .wh-header{
    background: #6c757d;
  }
  .course-title{
    width: 100%;
    height:45px;
    white-space: normal;
    overflow: hidden;
    text-overflow: ellipsis; // This is where the magic happens
  }
  #menus{
    margin-top:17px;
  }
  .entry{
    font-size: 1rem;
    padding: 15px 25px 5px;
    box-sizing: border-box;
    border: 1px solid #C7CDD1;
    margin:1px;
  }
  .entry:hover{
    background:#ecf0f1;
  }
  .entry a{
    font-family:'Raleway';
    text-transform:uppercase;
    font-weight:200px;
    font-weight:800;
    color:#000000;
  }
  .input-group{
    height:50px;
    font-size:15px;
    border: 1px solid #ccc;
    border-radius:2px;
  }
  .row{
    margin-top:15px;
  }
</style>
<%- include('../partials/account-menu') -%>

<% if(course) {%>
<div class="cbp-row">
  <div class="cbp-container">
    <div class="one whole wh-padding">
      <nav role="navigation" aria-label="Breadcrumbs" class="breadcrumb-trail breadcrumbs" itemprop="breadcrumb">
          <ul class="trail-items" itemscope="" itemtype="http://schema.org/BreadcrumbList">
              <li class="trail-item trail-begin"><a href="/dashboard" rel="home" itemprop="item"><span itemprop="name">Dashboard</span></a>
                  <meta itemprop="position" content="1">
              </li>
              <li class="trail-item trail-begin"><a href="/course/<%=course.course_id%>" rel="home" itemprop="item"><span itemprop="name"><%=course.course_name%></span></a>
                  <meta itemprop="position" content="2">
              </li>
              <li itemprop="itemListElement" itemscope=""  class="trail-item trail-end"><span itemprop="item"><span itemprop="name">Create Topic</span></span>
                  <meta itemprop="position" content="3">
              </li>
          </ul>
      </nav>
    </div>
  </div>
</div>

<div class="cbp-row wh-sensei-single-course-header">
	<div class="cbp-container">
		<div class="wh-sensei-title-wrap wh-padding">
      <h3>Create Topic</h3>
      <form action="/course/add-topic" method="POST">
        <input name="courseid" type="text" value="<%=course.course_id%>" readonly hidden required>

        <!--
        <div class="row">
          <div class="col-12">
